---
import MainLayout from "../layouts/MainLayout.astro";
---

<MainLayout>
  <div class="bg-cover bg-center w-full h-full bg-green-900">
    <section class="grid grid-cols-2 py-20 px-24 lg:px-35 lg:py-20 gap-32">
      <div>
        <div class="animate__animated animate__fadeInLeft">
          <h1 class="text-8xl text-white mb-12">
            Digital <br />Oprydningsdag
          </h1>
          <h2 class="text-white text-3xl">
            En dag hvor vi samles og <br /> rydder op i vores digitale affald!
          </h2>
        </div>
      </div>

      <div class="flex justify-center align-center">
        <img
          class="w-60 lg:w-96 animate-pulse"
          src="public/verden_illustration.svg"
          alt="Oppefra"
        />
      </div>
    </section>
  </div>
</MainLayout>
